<UserControl x:Class="EW12S.UserControls.ucLogSystem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EW12S.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <ScrollViewer x:Name="Scr_LogSYSTEM" Grid.Row="0" Margin="0,0,0,0">
        <RichTextBox Margin="0,0,1,2" Padding="5,5,0,0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <FlowDocument>
                <Paragraph>
                    <Run FontSize="11" FontWeight="Normal" Text="{Binding Path=LOGDETAIL,UpdateSourceTrigger=PropertyChanged}"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
    </ScrollViewer>
    
</UserControl>
